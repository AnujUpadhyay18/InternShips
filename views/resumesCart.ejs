<!-- views/resumesCart.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resumes Cart</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        a {
            color: #1a73e8;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Resumes Cart</h1>
    <table>
        <thead>
            <tr>

                <th>Email</th>
                <th>Resume</th>
            </tr>
        </thead>
        <tbody>
            <% resumes.forEach(resume => { %>
                <tr>
            
                    <td><%= resume.email %></td>
                    <td><a href="/owner/download/<%= resume._id %>">Download PDF</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
